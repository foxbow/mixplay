/*
 * asks for a name and saves the current playlist
 */
function savePL() {
  var name=window.prompt('Save playlist as', 'party');
  if( name != null && name != '' && name != 'none' ) {
    sendCMD( 0x1b, name );
    doUpdate=-1
  }
  else {
    window.alert("name is "+name );
  }
}

/*
 * acts on clicking in the Playlist in play mode it jumps or pauses
 * in edit mode the title is removed from the playlist.
 */
function plCMD( cmd, count, key ) {
  var e=document.getElementById('pledit');
  if( e.style.display == 'none' ) {
    if( count != 0 ) {
      sendCMD( cmd, count );
    }
    else {
      sendCMD( cmd );
    }
  }
  else {
    sendCMD( 0x1c, key );
  }
}

