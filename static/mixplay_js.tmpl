 */
function initScroll(index,id) {
	if( scrolls[index] == undefined ) {
		var element=document.getElementById(id);
		var scroll={"id":id,"element":element,"offset":"0px"};
		scrolls[index]=scroll;
    if( index+1 > numscrolls ) {
      numscrolls=index+1;
    }
	}
}

